{% if sections[currentFragment] is defined %}
    {# Inclure le template principal du fragment #}
    {% include sections[currentFragment].template with {
        'currentFragment': currentFragment,
        'currentSubFragment': currentSubFragment,
    } %}
    
    {% if sections[currentFragment].subFragments is defined and sections[currentFragment].subFragments[currentSubFragment] is defined %}
        {# Inclure le sous-fragment avec le chemin complet #}
        {% include sections[currentFragment].subFragments[currentSubFragment]%}
    {% endif %}
{% endif %}
