{% extends 'base.html.twig' %}

{% block title %}Services Numériques{% endblock %}

{% block body %}
    <div class="background-numerique">
        <!-- Navbar -->
        {% include 'partials/Page/header.html.twig' %}

        <!-- Hero Section -->
        <section class="hero">
            <div class="heroContent">
                <h1>Services Numériques</h1>
                <p>Optimisez votre entreprise avec des solutions numériques modernes.</p>
            </div>
            <a href="{{ path('contact') }}">Contactez-nous</a>
