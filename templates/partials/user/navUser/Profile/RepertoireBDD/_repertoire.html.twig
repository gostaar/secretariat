<div style="min-height:100vh;" class="custom-bg d-flex">
    <!-- Sidebar -->
    {% include 'partials/user/_header.html.twig' %}

    <!-- Main Content -->
    <div class="flex-grow-1 p-4 d-flex flex-column">
        <div class="container card mb-4">
            <div class="container card-header d-flex justify-content-between align-items-center">
                <h4>Répertoire</h4>
            </div>
            <div class="card-body">
                {% if dossiers is empty %}
                    <div class="text-center">
                        <p>Aucun dossier.</p>
                    </div>
                {% else %}
                    <div id="dossier-container" class="flex-grow-1 p-4 d-flex justify-content-start gap-3 flex-wrap">
                        {% for dossier in dossiers %}
                            <a id="dossier_{{ dossier.id }}" data-id="{{ dossier.id }}" style="max-width:100px;" class="dossier text-center d-flex flex-column flex-start text-decoration-none">
                                <i class="fas fa-folder fa-3x text-center text-warning"></i>
                                <p class='text-black'>{{ dossier.name }}</p>
                            </a>
                        {% endfor %}
                    </div>
                {% endif %}
                <div class="d-flex justify-content-center mt-4">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#dossierModal">
                        Créer un Dossier
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="dossierModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Créer un nouveau Dossier</h5>
      </div>
      <div class="modal-body">
        <!-- Formulaire pour ajouter un dossier -->
        {{ form_start(addDossier, {'action': path('add_dossier'), 'method': 'POST'}) }}
        <div class="form-group">
          {{ form_label(addDossier.name, 'Nom du dossier', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(addDossier.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom du Dossier'}}) }}
        </div>
      </div>
      <div class="modal-footer">
        {{ form_widget(addDossier.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
        {{ form_end(addDossier) }}
      </div>
    </div>
  </div>
</div>

<div id="contextMenu" class="dropdown-menu" style="display: none; position: absolute;">
    <a class="dropdown-item" href="javascript:void(0)" id="openDossier">Ouvrir le dossier</a>
    <a class="dropdown-item" href="javascript:void(0)" id="renameDossier">Renommer le dossier</a>
    <a class="dropdown-item" href="javascript:void(0)" id="deleteDossier">Supprimer le dossier</a>
</div>