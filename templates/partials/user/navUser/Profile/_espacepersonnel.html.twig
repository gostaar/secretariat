<div style="min-height:100vh;" class="custom-bg d-flex">
    <!-- Sidebar -->
    {% include 'partials/user/_header.html.twig' %}

    <!-- Main Content -->
    <div class="flex-grow-1 p-4 d-flex flex-column">
        <div class="container card mb-4">
            <div class="container card-header d-flex justify-content-between align-items-center">
                <h4>Espace personnel</h4>
            </div>
            <div class="card-body">
                {% set buttons = [
                    {'id': 'btnFactures', 'icon': 'file-invoice', 'link': '#link-Factures', 'text': 'Factures'},
                    {'id': 'btnRepertoire', 'icon': 'folder', 'link': '#link-Repertoire', 'text': 'Répertoire'},
                    {'id': 'btnProfile', 'icon': 'user-circle', 'link': '#link-Profile', 'text': 'Informations'},
                    {'id': 'btnParametres', 'icon': 'cogs', 'link': '#link-parametres', 'text': 'Paramètres'}
                ] %}

                <div class="c-access d-flex justify-content-around flex-wrap">
                    {% for button in buttons %}
                        <a id="{{ button.id }}" href="{{ button.link }}" class="text-center d-flex flex-column flex-start text-decoration-none">
                            <i class="fas fa-{{ button.icon }} fa-2x d-sm-none text-black"></i>
                            <i class="fas fa-{{ button.icon }} fa-3x d-none d-sm-inline d-md-inline text-black"></i>
                            <h6 class="d-block d-md-none text-black">{{ button.text }}</h6>
                            <h5 class="d-none d-md-block text-black">{{ button.text }}</h5>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="container card mb-4">
            <div class="container card-header d-flex justify-content-between align-items-center">
                <h4>Mes factures</h4>
            </div>
           <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nom de la facture</th>
                            <th>ID</th>
                            <th>Status</th>
                            <th>Informations</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if factures is empty %}  
                            <tr>
                                <td colspan="4" class="text-center">Aucune facture trouvée.</td>
                            </tr>
                        {% else %}
                            {% for facture in factures %}
                                <tr>
                                    <td>{{ facture.id }}</td>
                                    <td>{{ facture.status }}</td>
                                    <td>{{ facture.commentaire }}</td>
                                    <td>{{ facture.is_active }}</td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
                <div class="d-flex justify-content-center">
                    <a id='btnFactures' href="#link-Factures" class="btn btn-secondary btn-sm">Accéder</a>
                </div>
            </div>
        </div>

        <div class="container card mb-4">
            <div class="container card-header d-flex justify-content-between align-items-center">
                <h4>Mon répertoire</h4>
            </div>
            <div class="card-body">
                {% if dossiers is empty %}
                    <div class="text-center">
                        <p>Aucun dossier.</p>
                    </div>
                {% else %}
                    <div class="flex-grow-1 p-4 d-flex justify-content-center gap-3">
                        {% for dossier in dossiers|slice(0, 3) %}
                            <a id="{{ dossier.id }}" href="#link-repertoireInfo" style="max-width:100px;" class="text-center d-flex flex-column flex-start text-decoration-none">
                                <i class="fas fa-folder fa-3x text-center text-warning"></i>
                                <p class='text-black'>{{ dossier.name }}</p>
                            </a>
                        {% endfor %}
                    </div>
                {% endif %}
                <div class="d-flex justify-content-center">
                    <a id='btnRepertoire' href="#link-Repertoire" class="btn btn-secondary btn-sm">Voir plus</a>
                </div>
            </div>
        </div>

    </div>
</div>
