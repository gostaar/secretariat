<div class="container card mb-4">
    <div class="card-body">
        <div class="container card-header bg-white">
            <h5>Facture Ã  payer</h5>
        </div>
        
        <!-- Documents Table -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nom de la facture</th>
                    <th>ID</th>
                    <th>Status</th>
                    <th>Informations</th>
                </tr>
            </thead>
            <tbody>
                {% for facture in factures %}
                    <tr>
                        <td>{{ facture.name }}</td>
                        <td>{{ facture.id }}</td>
                        <td>{{ facture.status }}</td>
                        <td>{{ facture.info }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <!-- Voir tous les documents -->
        <div class="d-flex justify-content-center mt-4">
            <a href="{{ path('user_factures') }}" class="btn btn-secondary">Voir toutes mes factures</a>
        </div>
    </div>
</div>

