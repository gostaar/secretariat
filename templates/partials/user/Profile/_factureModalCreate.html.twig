<div class="modal fade" id="factureModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Cr√©er une nouvelle Facture</h5>
      </div>
      <div class="modal-body">
        {{ form_start(forms['addFacture'], {'action': path('add_facture'), 'method': 'POST'}) }}
        
        <div class="d-flex">
            {{ form_row(forms['addFacture'].montant) }}
            {{ form_row(forms['addFacture'].date_facture) }}
            {{ form_row(forms['addFacture'].date_paiement) }}
        </div>
        <div class="d-flex">
            {{ form_row(forms['addFacture'].status) }}
            {{ form_row(forms['addFacture'].commentaire) }}
        </div>
            {{ form_row(forms['addFacture'].is_active) }}
            {{ form_row(forms['addFacture'].factureLignes) }}

        {{ form_end(forms['addFacture']) }}
      </div>
    </div>
  </div>
</div>
