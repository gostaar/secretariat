
    <!-- Main Content -->
    <div class="flex-grow-1 p-4 d-flex flex-column">
        <div class="container card mb-4">
            <div class="container card-header d-flex justify-content-between align-items-center">
                <h4>Espace personnel</h4>
            </div>
            <div class="card-body p-2 p-md-5 m-md-4 c-access d-flex justify-content-around flex-wrap">
                {% set buttons = [
                    {id: 'btnFactures', icon: 'file-invoice', link: 'link-Factures', text: 'Factures'},
                    {id: 'btnRepertoire', icon: 'folder', link: 'link-Repertoire', text: 'Répertoire', service:'Repertoire'},
                    {id: 'btnProfile', icon: 'user-circle', link: 'link-Profile', text: 'Informations'},
                    {id: 'btnParametres', icon: 'cogs', link: 'link-parametres', text: 'Paramètres'}
                ] %}
                {% for button in buttons %}
                    {% if button.service is not defined or button.service is empty or button.service in services %}
                        <div class="d-flex flex-column align-items-center" style="position: relative; width: 130px;">
                            <button 
                                type="button" 
                                id="{{ button.id }}"
                                data-fragment="{{ button.link }}" 
                                class="change-fragment btn d-flex flex-column flex-start align-items-center text-decoration-none"
                                style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background-color: transparent; border: none; z-index: 1; padding: 0;">
                            </button>

                            <!-- Affichage de l'icône en version mobile et desktop -->
                            <i class="fas fa-{{ button.icon }} fa-2x d-sm-none text-black"></i>
                            <i class="fas fa-{{ button.icon }} fa-3x d-none d-sm-inline d-md-inline text-black"></i>

                            <!-- Affichage du titre en version mobile et desktop -->
                            <h6 class="d-block d-md-none text-center text-black">{{ button.text }}</h6>
                            <h5 class="d-none d-md-block text-center text-black">{{ button.text }}</h5>
                        </div>
                    {% endif %}    
                {% endfor %}
            </div>
        </div>

        <div class="container card mb-4">
            <div class="container card-header d-flex justify-content-between align-items-center">
                <h4>Mes factures</h4>
            </div>
           <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nom de la facture</th>
                            <th>ID</th>
                            <th>Status</th>
                            <th>Informations</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if factures is empty %}  
                            <tr>
                                <td colspan="4" class="text-center">Aucune facture trouvée.</td>
                            </tr>
                        {% else %}
                            {% for facture in factures|slice(0, 3) %}
                                <tr>
                                    <td>{{ facture.id }}</td>
                                    <td>{{ facture.status }}</td>
                                    <td>{{ facture.commentaire }}</td>
                                    <td>{{ facture.is_active }}</td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
                <div class="d-flex justify-content-center">
                    <button id='btnFacture' data-fragment='link-Factures' class="change-fragment btn btn-secondary btn-sm">Accéder</button>
                </div>
            </div>
        </div>

        {% if 'Repertoire' in services %}
            <div class="container card mb-4">
                <div class="container card-header d-flex justify-content-between align-items-center">
                    <h4>Mon répertoire</h4>
                </div>
                <div class="card-body">
                    {% if dossiers is empty %}
                        <div class="text-center">
                            <p>Aucun dossier.</p>
                        </div>
                    {% else %}
                        <div class="flex-grow-1 p-4 d-flex justify-content-center gap-3">
                            {% for dossier in filteredDossiers|slice(0, 3) %}
                                <a id="dossier_{{ dossier.id }}" data-id="{{ dossier.id }}" href="/repertoire/{{ dossier.id }}" style="max-width:100px;" class="text-center d-flex flex-column flex-start text-decoration-none">
                                    <i class="fas fa-folder fa-3x text-center text-warning"></i>
                                    <p class='text-black'>{{ dossier.name }}</p>
                                </a>
                            {% endfor %}
                        </div>
                    {% endif %}
                    <div class="d-flex justify-content-center">
                        <button id='btnRepertoire' data-fragment='link-Repertoire' class="change-fragment btn btn-secondary btn-sm">Voir plus</button>
                    </div>
                </div>
            </div>
        {% endif %}

    </div>

