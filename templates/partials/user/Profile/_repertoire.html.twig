

    <!-- Main Content -->
    <div class="flex-grow-1 p-4 d-flex flex-column">
      <div class="container card mb-4">
          <div class="container card-header d-flex justify-content-between align-items-center">
              <h4>Répertoire</h4>
          </div>
          <div class="card-body">
              <!-- Barre de recherche -->
              <div class="mb-4">
                  <input 
                      type="text" 
                      id="searchBarRepertoire" 
                      class="form-control" 
                      placeholder="Rechercher un dossier...">
              </div>

              {# {% set filteredDossiers = dossiers|filter(dossier => dossier.services == 'Repertoire') %} #}
              {% if filteredDossiers is empty %}
                  <!-- Aucun numerique -->
                  <div class="text-center">
                      <div style="position: relative; display: inline-block;">
                          <i class="fas fa-file-alt fa-5x text-center m-5"></i>
                          <div style="position: absolute; 
                                      top: 0; left: 0; 
                                      right: 0; bottom: 0; 
                                      background-color: rgba(255, 255, 255, 0.7); 
                                      z-index: 1;">
                          </div>
                      </div>
                      <h1 style="color: grey;">Aucun document numérique</h1>
                      <p class="text-muted">À cet endroit, vous pourrez consulter vos documents numériques.</p>
                  </div>
              {% else %}
                  <div id="dossierRepertoireList" class="d-flex flex-wrap">
                      {% for dossier in filteredDossiers|slice(0, 3) %}
                          <a id="dossier_{{ dossier.id }}" data-id="{{ dossier.id }}" 
                            style="max-width:100px;" 
                            class="dossier repertoire text-center d-flex flex-column flex-start text-decoration-none">
                              <i class="fas fa-folder fa-3x text-center text-warning"></i>
                              <p class='text-black'>{{ dossier.name }}</p>
                          </a>
                      {% endfor %}
                  </div>
              {% endif %}
              
              <div class="d-flex justify-content-center mt-4">
                  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#dossierModal">
                      Créer un nouveau dossier Répertoire
                  </button>
              </div>
          </div>
      </div>
    </div>


<!-- Modal pour créer le dossier-->
<div class="modal fade" id="dossierModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Créer un nouveau Dossier</h5>
      </div>
      <div class="modal-body">
        {{ form_start(addDossier, {'action': path('add_dossier'), 'method': 'POST'}) }}
        <div class="form-group">
          {{ form_label(addDossier.name, 'Nom du dossier', {'label_attr': {'class': 'col-form-label'}}) }}
          {{ form_widget(addDossier.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom du Dossier'}}) }}
        </div>
      </div>
      <div class="modal-footer">
        {{ form_widget(addDossier.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
        {{ form_end(addDossier) }}
      </div>
    </div>
  </div>
</div>

<!-- Modale pour renommer le dossier -->
<div class="modal fade" id="renameDossierModal" tabindex="-1" role="dialog" aria-labelledby="renameDossierModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="renameDossierModalLabel">Renommer le Dossier</h5>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="newDossierName" class="col-form-label">Entrez le nouveau nom du dossier :</label>
          <input type="text" class="form-control" id="newDossierName" placeholder="Nouveau nom du dossier">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
        <button type="button" class="btn btn-primary" id="submitNewDossierName">Renommer</button>
      </div>
    </div>
  </div>
</div>

<!-- Menu Conextuel -->
<div id="contextMenu" class="dropdown-menu" style="display: none; position: absolute;">
    <a class="dropdown-item" href="javascript:void(0)" id="openDossier">Ouvrir le dossier</a>
    <a class="dropdown-item" href="javascript:void(0)" id="renameDossier">Renommer le dossier</a>
    <a class="dropdown-item" href="javascript:void(0)" id="deleteDossier">Supprimer le dossier</a>
</div>