    <!-- Main Content -->
    <div class="flex-grow-1 p-4 d-flex flex-column">
        <div class="container card mb-4">
            <div class="container card-header d-flex justify-content-between align-items-center">
                <h4>Numérique</h4>
            </div>
            <div class="card-body">
                {# {% set filteredDossiers = dossiers|filter(dossier => dossier.services == 'Numerique') %} #}
                
                {% if filteredDossiers is empty %}
                    <!-- Aucun numerique -->
                    <div class="text-center">
                        <div style="position: relative; display: inline-block;">
                            <i class="fas fa-file-alt fa-5x text-center m-5"></i>
                            <div style="position: absolute; 
                                    top: 0; left: 0; 
                                    right: 0; bottom: 0; 
                                    background-color: rgba(255, 255, 255, 0.7); 
                                    z-index: 1;">
                            </div>
                        </div>
                        <h1 style="color: grey;">Aucun document numérique</h1>
                        <p class="text-muted">À cet endroit, vous pourrez consulter vos documents numériques.</p>
                    </div>
                {% else %}
                    {% for dossier in filteredDossiers|slice(0, 3) %}
                        <a id="dossier_{{ dossier.id }}" data-id="{{ dossier.id }}" style="max-width:100px;" class="dossier text-center d-flex flex-column flex-start text-decoration-none">
                            <i class="fas fa-folder fa-3x text-center text-warning"></i>
                            <p class='text-black'>{{ dossier.name }}</p>
                        </a>
                    {% endfor %}
                {% endif %}
                
                <div class="d-flex justify-content-center">
                    <a id="btnNewDocument" href="{{ path('user', {fragment: 'link-newDocument'}) }}" class="btn btn-primary">Créer un nouveau document numérique</a>
                </div>
            </div>
        </div>
    </div>
