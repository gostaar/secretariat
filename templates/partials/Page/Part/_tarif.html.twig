<div class="background-tarifs">
    {% include 'partials/Page/Part/_navBar.html.twig' %}
    <section class="hero d-flex justify-content-center flex-column flex-grow-1">
        <div class="heroContent">
            <h1>Tarifs</h1>
            <p>Détails des tarifs</p>
        </div>
        <div>
            <a href="#link-contact-part">Contactez-nous</a>
        </div>
    </section>
</div>

<h1 class="services-title">Nos tarifs</h1>
<h2 class="services-subtitle">Le meilleur pour tous nos clients</h2>
<section id="services" class="service-list d-flex flex-wrap justify-content-center">
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 d-flex justify-content-center flex-wrap">
                {% set sections = [
                    { "title": "Devis", "items": ["Gratuit"] },
                    { "title": "Tarifs horaires", "items": ["35€/h en présentiel (+ frais de déplacement)", "30€/h en télésecrétariat"] },
                    { "title": "Tarifs à la carte", "items": ["Disponible sur demande"] },
                    { "title": "Forfaits", "items": ["Forfait hebdomadaire", "Forfait mensuel", "Tarifs dégressifs"] }
                ] %}

                {% for section in sections %}
                    <div class="service-item p-4 m-2 border rounded" style="background-color:white;">
                        <h3>{{ section.title }}</h3>
                        <ul class="list-unstyled">
                            {% for item in section.items %}
                                <li>{{ item }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

