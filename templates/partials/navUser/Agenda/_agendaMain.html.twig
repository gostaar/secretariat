<div class="body-user">
    <div class="container-fluid custom-bg p-0 m-0">
        <div class="container-user d-flex flex-column flex-md-row">
            <!-- Sidebar -->
            {% include 'partials/user/_header.html.twig' %}

            <!-- Main Content -->
            <div class="flex-grow-1 p-4">
                
                {# <div class="container bg-white border rounded mb-5 p-4">
                                  
                    <h2 class="text-center mb-2">Créer un événement</h2>
                
                    <form id="create-event-form">
                        <div class="mb-3">
                            <label for="event-title" class="form-label">Titre :</label>
                            <input type="text" id="event-title" name="title" class="form-control" required>
                        </div>
                
                        <div class="mb-3">
                            <label for="event-description" class="form-label">Description :</label>
                            <textarea id="event-description" name="description" class="form-control"></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="event-location" class="form-label">Lieu :</label>
                            <textarea id="event-location" name="location" class="form-control"></textarea>
                        </div>
                
                        <div class="mb-3">
                            <label for="event-start-date" class="form-label">Date de début :</label>
                            <input type="datetime-local" id="event-start-date" name="start" class="form-control" required>
                        </div>
                
                        <div class="mb-3">
                            <label for="event-end-date" class="form-label">Date de fin :</label>
                            <input type="datetime-local" id="event-end-date" name="end" class="form-control" required>
                        </div>
                
                        <button type="submit" id="create-event-button" class="btn btn-primary w-100 d-none">Créer l'événement</button>
                    </form>
                    <!-- Bouton "Authorize" avec logo Google -->
                    <button id="authorize_button" class="btn btn-outline-danger w-100 d-flex align-items-center justify-content-center mt-2 d-none">
                        <img src="{{ asset('build/images/google.png') }}" alt="Google logo" style="width: 20px; margin-right: 10px;" >
                        Connexion avec Google
                    </button>
                
                    <!-- Bouton "Sign Out" -->
                    <button id="signout_button" class="btn btn-outline-secondary w-100 mt-2 d-none">Déconnexion</button>
                    <div id='message'>
                        <div id="status-message" class="mt-3 text-center d-none"></div>
                        
                        <pre id="content" style="white-space: pre-wrap;" class="d-none"></pre>

                    </div>

                </div>
                
                {% include 'partials/navUser/Agenda/_agendaTab.html.twig' %} #}
            </div>
        </div>
    </div>
</div>